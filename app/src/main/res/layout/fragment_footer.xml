<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:id="@+id/footerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FooterFragment"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/playCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/holo_blue_light"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:id="@+id/cardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light">

            <ImageView
                android:id="@+id/playImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:src="@drawable/socceranim"/>

            <TextView
                android:id="@+id/footerTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/playImg"
                android:text="Soccer Last News:"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/newsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@id/footerTxt"
                android:layout_toRightOf="@id/playImg"
                android:singleLine="false"
                android:text=""
                android:textSize="15dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>